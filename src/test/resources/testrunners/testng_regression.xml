<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="POM Series Test Runners" verbose="4" thread-count="4"  parallel = "tests">
 
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />

		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />

	</listeners>

	<test name="Open Cart Login Page Test _ chrome_89">

		<parameter name="browser" value="chrome" />
	<parameter name="browserversion" value="89.0" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Open Cart Login Page Test _ firefox">

		<parameter name="browser" value="firefox" />
<parameter name="browserversion" value="83.0" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Open Cart Login Page Negative Test _ firefox">
		<parameter name="browser" value="firefox" />
<parameter name="browserversion" value="91.0" />

		<classes>
			<class name="com.qa.opencart.tests.LoginPageNegativeTest" />
		</classes>
	</test>
	
</suite>